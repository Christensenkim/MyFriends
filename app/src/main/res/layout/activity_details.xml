<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/personName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Name"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_below="@+id/personName"
                android:hint="Phone Number"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:onClick="call"
                android:background="@drawable/baseline_call_black_48dp"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:onClick="message"
                android:background="@drawable/baseline_textsms_black_48dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/address"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_below="@+id/personName"
            android:hint="Address"/>
        <EditText
            android:id="@+id/mailAddress"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_below="@+id/mailAddress"
            android:hint="Mail Address"/>
        <EditText
            android:id="@+id/website"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_below="@+id/website"
            android:hint="Website"/>
        <DatePicker
            android:id="@+id/birthday"
            android:layout_width="310dp"
            android:layout_height="100dp"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            />

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/baseline_portrait_black_48dp"
            android:onClick="takeAPicture"
            android:id="@+id/UserPicture"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.90"/>
        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="saveFriend"/>
    </LinearLayout>



</RelativeLayout>